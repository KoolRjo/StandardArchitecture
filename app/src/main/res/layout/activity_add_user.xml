<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddUserActivity">
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:text="@string/id"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_id"
        android:layout_alignStart="@id/tv_id"
        android:layout_marginTop="5dp"
        android:autofillHints="U01!"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_below="@id/edt_id"
        android:layout_alignStart="@id/edt_id"
        android:text="@string/name"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_name"
        android:layout_alignStart="@id/tv_name"
        android:layout_marginTop="5dp"
        android:autofillHints="Do Manh Hieu!"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/tv_account"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_below="@id/edt_name"
        android:layout_alignStart="@id/edt_name"
        android:text="@string/account"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edt_account"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_account"
        android:layout_alignStart="@id/tv_account"
        android:layout_marginTop="5dp"
        android:autofillHints="Boyyeurap@gmail.com!"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_below="@id/edt_account"
        android:layout_alignStart="@id/edt_account"
        android:text="@string/pass"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_pass"
        android:layout_alignStart="@id/tv_pass"
        android:layout_marginTop="5dp"
        android:autofillHints="Hieu12345!"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingEnd="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    <android.widget.Button
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_below="@id/edt_pass"
        android:layout_alignEnd="@id/edt_pass"
        android:layout_marginTop="20dp"
        android:text="@string/btnSave"
        android:textSize="20sp"
        android:textStyle="bold"/>
</RelativeLayout>