<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_alignTop="@id/tv_item_id"
        android:layout_marginStart="180dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_item_account"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_item_id"
        android:layout_alignStart="@id/tv_item_id"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_item_pass"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_item_name"
        android:layout_alignStart="@id/tv_item_name"
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
</RelativeLayout>